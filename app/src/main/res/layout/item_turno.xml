<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--<androidx.cardview.widget.CardView-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgFotoChofer"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded"
                tools:srcCompat="@drawable/foto_perfil" />

            <LinearLayout
                android:layout_width="142dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtvAlias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/colorTextBlack"
                    android:textStyle="bold"
                    tools:text="Lucas" />

                <TextView
                    android:id="@+id/txtvTurno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Turno 1"
                    android:textColor="@color/colorTextOrange"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtvCantPasajeros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Unidad de 6 pasajeros"
                    android:textColor="@color/colorTextGray"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtvTiempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="esperando hace 5 h"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
